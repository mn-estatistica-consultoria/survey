extends layout

block content
  .container
    .row
      .col-md-6
        h2 Guest Info
        table.table
          tr
            th Guest ID
            td= guest.uuid
          tr
            th IP Address
            td= guest.ipAddress
          tr
            th User Agent
            td= guest.userAgent
      .col-md-6
        h2 Survey Data
        dl
          each q in questions
            dt= q.text
            dd= q.response