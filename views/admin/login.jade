doctype html
html(lang="en")
  head
    title Survey Admin
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.css')
    link(rel='stylesheet', href='/stylesheets/login.css')
  body
    #content.container
      include ../message.jade
      form.form-signin(method='post', action='/admin/login', data-toggle='validator')
        h2.form-signin-heading Please sign in
        label.sr-only(for='username') Username
        input.form-control(type='text', id='username', name='username', placeholder='Username', required, autofocus)
        .help-block.with-errors
        label.sr-only(for='password') Password
        input.form-control(type='password', id='password', name='password', placeholder='Password', required)
        .help-block.with-errors
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in

    script(type='text/javascript', src='/javascripts/jquery.js')
    script(type='text/javascript', src='/javascripts/bootstrap.js')
    script(type='text/javascript', src='/javascripts/validator.js')
